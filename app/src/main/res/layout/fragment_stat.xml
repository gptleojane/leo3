<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <!-- ===================== 頂部：年 / 月選擇 ===================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stat_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:contentDescription="@null"
                    android:focusable="true"
                    android:src="@drawable/year"
                    app:tint="@color/text_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stat_year_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="9dp">

                <TextView
                    android:id="@+id/stat_current_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025年"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:text=" ▼"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stat_month_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="9dp">

                <TextView
                    android:id="@+id/stat_current_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部月份"
                    android:textColor="@color/text_primary"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:text=" ▼"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/stat_tv_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:paddingEnd="10dp"
                android:text="小提醒"
                android:textSize="12dp" />

        </LinearLayout>

        <!-- ===================== 總覽（小總結） ===================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 支出 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支出"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/stat_total_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textColor="@color/expense_red_light"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 結餘 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="結餘"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/stat_total_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 收入 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收入"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/stat_total_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textColor="@color/income_blue_light"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!-- ===================== 左右分類卡片（卡片感 + 標題 + summary） ===================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- ===== 支出卡片 ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/stat_card_expense"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- 標題 -->
                    <TextView
                        android:id="@+id/stat_expense_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支出分類"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 說明 -->
                    <TextView
                        android:id="@+id/stat_expense_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="依金額由大到小"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <!-- 列表：必須 0dp + weight 才能填滿卡片高度 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/stat_category_recycler_expense"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:overScrollMode="always"
                        android:scrollbars="vertical" />

                    <TextView
                        android:id="@+id/stat_expense_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="共 0 個分類"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ===== 收入卡片 ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/stat_card_income"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/bg_card"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- 標題 -->
                    <TextView
                        android:id="@+id/stat_income_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收入分類"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 說明 -->
                    <TextView
                        android:id="@+id/stat_income_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="依金額由大到小"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <!-- 列表 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/stat_category_recycler_income"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:overScrollMode="always"
                        android:scrollbars="vertical" />

                    <!-- summary -->
                    <TextView
                        android:id="@+id/stat_income_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="共 0 個分類"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/statDetailContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:visibility="gone" />

</FrameLayout>