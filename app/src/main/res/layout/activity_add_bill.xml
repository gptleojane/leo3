<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <!-- 收入 / 支出 -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/addbill_mbtg_type"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:selectionRequired="true"
        app:singleSelection="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addbill_mb_expense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_bill_expense"
            app:icon="@drawable/expense"
            app:iconSize="24dp"
            android:layout_weight="1"
            android:textColor="@color/text_primary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addbill_mb_income"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_bill_income"
            app:icon="@drawable/income"
            app:iconSize="24dp"
            android:layout_weight="1"
            android:textColor="@color/text_primary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </com.google.android.material.button.MaterialButtonToggleGroup>


    <!-- 分類選擇 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addbill_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:overScrollMode="always"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addbill_mbtg_type" />


    <!-- 日期 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addbill_til_date"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:hint="@string/add_bill_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addbill_recyclerView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addbill_tiet_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- 新增分類 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addbill_bt_addCategory"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:text="新增分類"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toTopOf="@+id/addbill_til_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addbill_recyclerView" />


    <!-- 金額 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addbill_til_amount"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:hint="@string/add_bill_amount"
        app:layout_constraintEnd_toStartOf="@+id/addbill_til_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addbill_til_date">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addbill_tiet_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- 備註 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addbill_til_note"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/add_bill_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addbill_til_amount"
        app:layout_constraintTop_toBottomOf="@id/addbill_til_date">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addbill_tiet_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 新增按鈕 -->
    <Button
        android:id="@+id/addbill_bt_add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:text="@string/add_bill_add"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toTopOf="@+id/number_pad_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addbill_til_amount" />

    <!-- 返回按鈕 -->
    <Button
        android:id="@+id/addbill_bt_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/back"
        android:textColor="@color/text_primary"
        app:icon="@drawable/back"
        app:iconSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/number_pad_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addbill_til_note" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/number_pad_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/bg_card"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/number_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:padding="12dp">

            <!-- 1 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_1"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 2 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_2"
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 3 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_3"
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 4 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_4"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 5 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_5"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 6 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_6"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 7 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_7"
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 8 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_8"
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 9 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_9"
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- AC -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_ac"
                android:text="AC"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/expense_orange"
                android:textColor="@color/bg_card" />

            <!-- 0 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_0"
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- DEL -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_del"
                android:text="←"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/income_blue"
                android:textColor="@color/bg_card" />

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>


