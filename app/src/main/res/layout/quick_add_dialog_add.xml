<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/bg_card">

    <!-- 金額 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/qadd_tiet_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="金額"
            android:inputType="none"
            android:textColor="@color/text_primary"
            android:focusable="false"
            android:textColorHint="@color/text_hint"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 小提示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="日期：今日"
            android:layout_weight="1"
            android:textColor="@color/text_hint"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="分類：未分類"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="end"
            android:textColor="@color/text_hint"/>


    </LinearLayout>

    <!-- 小鍵盤：3×4 -->
    <GridLayout
        android:id="@+id/qadd_number_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="8dp">

        <!-- 數字鍵：1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_1"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 數字鍵：2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_2"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 數字鍵：3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_3"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 數字鍵：4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_4"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 數字鍵：5 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_5"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 數字鍵：6 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_6"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 數字鍵：7 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_7"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 8 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_8"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 9 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_9"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 支出 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_expense"
            android:text="支出"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            app:cornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/expense_red_stroke_light"
            app:backgroundTint="@color/expense_red_light"
            android:textColor="@color/text_primary" />


        <!-- 0 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_0"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            app:backgroundTint="@color/number_pad_button_bg"
            android:textColor="@color/text_primary"/>

        <!-- 收入 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/np_income"
            android:text="收入"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            app:cornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/income_blue_stroke_light"
            app:backgroundTint="@color/income_blue_light"
            android:textColor="@color/text_primary" />


    </GridLayout>
</LinearLayout>
