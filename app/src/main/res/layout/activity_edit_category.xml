<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <!-- ================== 類型切換 ================== -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/editcate_mbtg_type"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editcate_mb_expense"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/add_bill_expense"
            android:textColor="@color/text_primary"
            app:icon="@drawable/expense"
            app:iconSize="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editcate_mb_income"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/add_bill_income"
            android:textColor="@color/text_primary"
            app:icon="@drawable/income"
            app:iconSize="24dp" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- ================== 分類清單 ================== -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editcate_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:overScrollMode="always"
        android:scrollbars="vertical" />


    <!-- ================== 修改 / 刪除（內含目前選擇） ================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editcate_card_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/bg_card"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 這裡就是「目前選擇」合併位置 -->
            <TextView
                android:id="@+id/editcate_tv_category_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="正在編輯：尚未選擇"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editcate_tv_editing_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="提示：點上方分類後才可修改/刪除"
                android:textColor="@color/text_hint"
                android:textSize="12sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editcate_tiet_rename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="輸入新的分類名稱（改名用）"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editcate_btn_update"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="5"
                    android:text="儲存修改"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/editcate_btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:text="刪除"
                    android:gravity="center"
                    android:textColor="@color/text_primary" />


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ================== 新增分類 ================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editcate_card_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/bg_card"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/editcate_tv_type_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新增到：尚未選擇"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editcate_tiet_addname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="輸入新增分類名稱"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editcate_btn_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="新增"
                    android:textColor="@color/text_primary" />


            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editcate_btn_reset"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="重設"
            android:textColor="@color/text_primary"
            app:iconSize="24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editcate_btn_back"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="返回"
            android:textColor="@color/text_primary"
            app:icon="@drawable/back"
            app:iconSize="24dp" />

    </LinearLayout>

</LinearLayout>
