<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <!-- ===================== 上方：資訊區（60%） ===================== -->
    <LinearLayout
        android:id="@+id/addbill_info_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp">

        <!-- 金額（流行記帳 APP 主角） -->
        <TextView
            android:id="@+id/addbill_amount_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:paddingBottom="20dp" />

        <!-- 收入 / 支出 -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/addbill_mbtg_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addbill_mb_expense"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/add_bill_expense"
                app:icon="@drawable/expense"
                app:iconSize="20dp"
                android:textColor="@color/text_primary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addbill_mb_income"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/add_bill_income"
                app:icon="@drawable/income"
                app:iconSize="20dp"
                android:textColor="@color/text_primary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </com.google.android.material.button.MaterialButtonToggleGroup>


        <!-- 分類 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分類"
            android:textColor="@color/text_hint"
            android:textSize="12sp"
            android:paddingBottom="6dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addbill_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:overScrollMode="always"
            android:scrollbars="vertical"
            android:layout_marginBottom="16dp" />


        <!-- 日期 + 備註（簡約風） -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textColor="@color/text_hint"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addbill_til_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addbill_tiet_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="備註"
            android:textColor="@color/text_hint"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addbill_til_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addbill_tiet_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- 新增分類（右上角） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addbill_bt_addCategory"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="新增分類"
                android:textColor="@color/text_primary"
                app:cornerRadius="16dp" />
        </LinearLayout>


        <!-- 新增（送出） -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addbill_bt_add"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:text="@string/add_bill_add"
            android:textColor="@color/text_primary"
            app:cornerRadius="16dp" />

        <!-- 返回 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addbill_bt_back"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/back"
            android:textColor="@color/text_primary"
            app:icon="@drawable/back"
            app:iconSize="20dp"
            app:cornerRadius="16dp" />

    </LinearLayout>


    <!-- ===================== 下方：數字鍵盤（40%） ===================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/number_pad_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/bg_card"
        android:padding="16dp">

        <GridLayout
            android:id="@+id/number_pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="4">

            <!-- 按鈕格式統一（你可自行複製） -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 其餘按鈕同格式（略） -->

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
