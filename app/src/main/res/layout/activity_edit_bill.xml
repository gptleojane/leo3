<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 收入 / 支出 -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/editbill_mbtg_type"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editbill_mb_expense"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/add_bill_expense"
                android:textColor="@color/text_primary"
                app:icon="@drawable/expense"
                app:iconSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editbill_mb_income"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/add_bill_income"
                android:textColor="@color/text_primary"
                app:icon="@drawable/income"
                app:iconSize="24dp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>


        <!-- 分類選擇 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/editbill_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:overScrollMode="always"
            android:scrollbars="vertical"
            app:layout_constraintHorizontal_bias="0.0" />

        <!-- 日期 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editbill_til_date"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="5"
                android:hint="@string/add_bill_date">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editbill_tiet_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 新增分類 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editbill_bt_addCategory"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="新增分類"
                android:textColor="@color/text_primary" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editbill_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="$0"
                android:textColor="@color/text_primary"
                android:textSize="30sp"
                android:textStyle="bold" />


            <!-- 備註 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editbill_til_note"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:hint="@string/add_bill_note">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editbill_tiet_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <!-- 新增按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editbill_bt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="修改"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="" />


            <Button
                android:id="@+id/editbill_bt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="刪除"
                android:textColor="@color/text_primary"
                app:icon="@drawable/delete"
                app:iconSize="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="" />

            <Button
                android:id="@+id/editbill_bt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/back"
                android:textColor="@color/text_primary"
                app:icon="@drawable/back"
                app:iconSize="24dp" />

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/number_pad_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center|bottom"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/bg_card"
        app:cardCornerRadius="16dp">

        <GridLayout
            android:id="@+id/number_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="8dp"
            android:rowCount="4">

            <!-- 1 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="1"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 2 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="2"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 3 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="3"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 4 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="4"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 5 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_5"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="5"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 6 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_6"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="6"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 7 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_7"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="7"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 8 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_8"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="8"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 9 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_9"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="9"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- AC -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_ac"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="AC"
                android:textColor="@color/bg_card"
                app:backgroundTint="@color/expense_orange"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 0 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_0"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="0"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- DEL -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_del"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="←"
                android:textColor="@color/bg_card"
                app:backgroundTint="@color/income_blue"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>


