<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="匯率換算"
            android:textColor="@color/text_primary"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <!-- 金額顯示 -->
        <TextView
            android:id="@+id/exchange_tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/bg_main"
            android:gravity="center"
            android:padding="12dp"
            android:text="$0"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- 說明文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="下方輸入金額，可同時換算成兩種不同幣別"
            android:textColor="@color/text_hint"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/exchange_spinner_from1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />
                <TextView
                    android:id="@+id/exchange_tv_results1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="換算結果1"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/bg_card"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Spinner
                    android:id="@+id/exchange_spinner_from2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/exchange_tv_results2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="換算結果2"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/divider" />

    <!-- 說明文字 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="快速切換前一次幣別"
        android:textColor="@color/text_hint"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/exchange_quick_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/exchange_tv_results1_save1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="結果1常用1" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/exchangerate" />


        <Button
            android:id="@+id/exchange_tv_results2_save1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="結果2常用1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/exchange_btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text="返回"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/number_pad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center|bottom"
        app:cardBackgroundColor="@color/bg_card"
        app:cardCornerRadius="16dp">

        <GridLayout
            android:id="@+id/number_pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="4"
            android:padding="6dp">

            <!-- 1 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_1"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 2 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_2"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 3 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_3"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 4 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_4"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 5 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_5"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 6 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_6"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 7 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_7"
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 8 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_8"
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- 9 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_9"
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- AC -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_ac"
                android:text="AC"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/expense_orange"
                android:textColor="@color/bg_card" />

            <!-- 0 -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_0"
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/number_pad_button_bg"
                android:textColor="@color/text_primary" />

            <!-- DEL -->
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/np_del"
                android:text="←"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp"
                android:textSize="24sp"
                app:backgroundTint="@color/income_blue"
                android:textColor="@color/bg_card" />

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
