<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">


        <TextView
            android:id="@+id/exchange_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匯率換算"
            android:layout_marginStart="12dp"
            android:textColor="@color/text_primary"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/exchange_tv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="$0"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="換算結果1"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="換算結果2"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exchange_quick_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_currency_usd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="結果1常用1" />

            <Button
                android:id="@+id/btn_currency_cny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="結果1常用2" />

            <Button
                android:id="@+id/btn_currency_jpy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="結果1常用3" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
android:layout_gravity="center"
                android:layout_marginTop="60dp"

                app:srcCompat="@drawable/exchangerate" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="結果2常用1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="結果2常用2" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="結果2常用3" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/exchange_btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/number_pad_button_bg"
            android:text="返回"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/number_pad_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center|bottom"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/bg_card"
        app:cardCornerRadius="16dp">

        <GridLayout
            android:id="@+id/number_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="8dp"
            android:rowCount="4">

            <!-- 1 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="1"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 2 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="2"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 3 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="3"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 4 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="4"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 5 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_5"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="5"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 6 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_6"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="6"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 7 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_7"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="7"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 8 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_8"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="8"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 9 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_9"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="9"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- AC -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_ac"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="AC"
                android:textColor="@color/bg_card"
                app:backgroundTint="@color/expense_orange"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 0 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_0"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="0"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- DEL -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_del"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="←"
                android:textColor="@color/bg_card"
                app:backgroundTint="@color/income_blue"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
