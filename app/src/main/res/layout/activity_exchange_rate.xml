<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="匯率換算"
            android:textColor="@color/text_primary"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <!-- 金額顯示 -->
        <TextView
            android:id="@+id/exchange_tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_amount_box"
            android:gravity="center"
            android:padding="12dp"
            android:text="$0"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- 說明文字 -->
        <TextView
            android:id="@+id/exchange_tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="目前顯示的金額以 TWD 為基準，下方常用按鈕會記錄上一個選擇的幣值。左右兩邊獨立，可同時計算不同幣值。"
            android:textColor="@color/text_hint"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/exchange_spinner_from1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/exchange_spinner_from2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exchange_tv_results1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="換算結果1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/exchange_tv_results2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="換算結果2"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/exchange_quick_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="" />


        <Button
            android:id="@+id/exchange_tv_results1_save1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="結果1常用1" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            app:srcCompat="@drawable/exchangerate" />


        <Button
            android:id="@+id/exchange_tv_results2_save1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="結果2常用1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/exchange_btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/number_pad_button_bg"
            android:text="返回"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/number_pad_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center|bottom"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/bg_card"
        app:cardCornerRadius="16dp">

        <GridLayout
            android:id="@+id/number_pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="8dp"
            android:rowCount="4">

            <!-- 1 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="1"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 2 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="2"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 3 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="3"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 4 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="4"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 5 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_5"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="5"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 6 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_6"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="6"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 7 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_7"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="7"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 8 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_8"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="8"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 9 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_9"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="9"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- AC -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_ac"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="AC"
                android:textColor="@color/bg_card"
                app:backgroundTint="@color/expense_orange"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- 0 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_0"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="0"
                android:textColor="@color/text_primary"
                app:backgroundTint="@color/number_pad_button_bg"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

            <!-- DEL -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/np_del"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="←"
                android:textColor="@color/bg_card"
                app:backgroundTint="@color/income_blue"
                app:cornerRadius="16dp"
                app:strokeWidth="0dp" />

        </GridLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
